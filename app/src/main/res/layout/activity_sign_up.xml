<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="match_parent"
        android:src="@drawable/ic_logo"/>
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="70dp"
        android:visibility="invisible"
        android:minHeight="70dp"
        android:layout_above="@id/editTextLogin"
        android:layout_centerHorizontal="true"
        />
    <EditText
        android:drawablePadding="5dp"
        android:drawableLeft="@drawable/custom_sobaka_icon"
        android:id="@+id/editTextLogin"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/editTextPassword"
        android:layout_height="50dp"
        android:ems="10"
        android:maxLength="15"
        android:layout_marginBottom="30dp"
        android:textColorHint="#424141"
        android:textColor="#424141"
        android:inputType="textPersonName"
        android:background="@drawable/custom_edittext_pattern"
        android:hint="Login"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:drawableStart="@drawable/custom_sobaka_icon" />

    <EditText
        android:drawableStart="@drawable/custom_lock_icon"
        android:drawablePadding="5dp"
        android:textColorHint="#424141"
        android:id="@+id/editTextPassword"
        android:background="@drawable/custom_edittext_pattern"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:ems="10"
        android:textColor="#424141"
        android:layout_centerInParent="true"
        android:inputType="textPassword"
        android:layout_marginBottom="30dp"
        android:hint="Password"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:drawableLeft="@drawable/custom_lock_icon" />


    <EditText
        android:drawablePadding="5dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColorHint="#424141"
        android:drawableStart="@drawable/custom_email_icon"
        android:drawableLeft="@drawable/custom_email_icon"
        android:id="@+id/editTextEmail"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:ems="10"
        android:textColor="#424141"
        android:background="@drawable/custom_edittext_pattern"
        android:layout_below="@id/editTextPassword"
        android:layout_centerInParent="true"
        android:inputType="textEmailAddress"
        android:hint="Email" />
    <Button
        android:id="@+id/btnSignUp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/editTextEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"/>

    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/govno1"
        android:layout_below="@id/btnSignUp"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:text="Already have an account?"
        android:textSize="20sp"/>

    <TextView
        android:layout_below="@+id/govno1"
        android:id="@+id/clickHere"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Click here."
        android:textSize="20sp"/>
</RelativeLayout>