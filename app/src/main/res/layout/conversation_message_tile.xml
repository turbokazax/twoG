<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/lblMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:layout_toLeftOf="@id/imageViewBox"
        android:background="@drawable/custom_mymessage_background"
        android:padding="10dp"
        android:text="My message"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/lblTimeSent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblMessage"
        android:layout_alignRight="@+id/lblMessage"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="15sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/imageViewBox"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        app:cardCornerRadius="25dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@raw/empty_profile_picture" />
    </androidx.cardview.widget.CardView>
</RelativeLayout>